@{ var UniqueId = Program.GetUniqueId(); }
<div class="col-lg-12 control-section">
    <div class="control_wrapper" style="width:100%;height:100%;">
        <div id="container_@UniqueId">
            <div id="calendar_@UniqueId"></div>
          </div>
    </div>
</div>

<script>
    var uniqueId = "calendar@UniqueId";
    var uuid = "@UniqueId";
    function RedRaw(){
        $("#calendar_" + uuid).html("<div id=" + uniqueId + " align=\"center\"></div>");
        DrawCalendar();
    }
    DrawCalendar();
    function DrawCalendar() {
        var calendar = new ej.calendars.Calendar({
            width: '100%',
            height:'100%'

        });
        calendar.appendTo('#calendar_@UniqueId');
    }

</script>